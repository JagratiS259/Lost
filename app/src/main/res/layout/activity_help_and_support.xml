<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpAndSupport">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AskUs"
        android:layout_marginTop="16dp"
        android:text="@string/hi_how_can_we_help_you"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/handp"
        android:layout_below="@id/AskUs"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/helpandsupport"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/qname"
        android:layout_marginTop="60dp"
        android:hint="Name"
        android:layout_below="@id/handp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/qemail"
        android:hint="Email"
        android:layout_below="@id/qname"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/qsubject"
        android:layout_below="@id/qemail"
        android:hint="Subject"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/qsubject"
        android:id="@+id/query"
        android:hint="Query/ Message"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/query"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/ocean_blue"
        android:text="@string/submit"
        android:textColor="@color/black"
        app:shapeAppearanceOverlay="@style/RoundCorner"/>

</RelativeLayout>